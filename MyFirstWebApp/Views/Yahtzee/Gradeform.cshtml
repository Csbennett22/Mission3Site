@model FanMailModel;

<h2>Send Me fanmail!</h2>
<form method="post">
    <label>From:</label>
    <input id="txtFrom" asp-for="From" /><br />
    <label>Subject:</label>
    <input id="txtSubject" asp-for="Subject" /><br />
    <label>Message:</label>
    <textarea rows="4" id="txtMessage" asp-for="Message"></textarea><br />
    <input id="buttonsend" type="button" value="Send Message" />
</form>
<div asp-validation-summary="All"></div>



<!--grade calculator form-->
<h2>Grade Calculator</h2>
<form method="post">
    <label>Assignments:</label>
    <input id="assignments" name="assignments"/><br />
    <label>Group Projects:</label>
    <input id="gproject" name="gproject"/><br />
    <label>Quizzes:</label>
    <input id="quiz" name="quiz" /><br />
    <label>Exams:</label>
    <input id="exam" name="exam"/><br />
    <label>INTEX:</label>
    <input id="intex" name="intex"/><br />

    <input id="buttoncalc" type="button" value="Calculate Grade" />
</form>

